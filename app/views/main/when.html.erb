<div class="page-wrap">

  <%= form_for(@trip, url: update_when_path(@trip), method: :patch) do |f| %>
    <%= f.text_field :appointment %>
    <%= f.submit '', class: 'goForward' %>
    <% end %>

  <div class="buttons">
    <%= link_to "", where_path, class: 'goBack' %>

  </div>

<script type="text/javascript" charset="utf-8">
  $('#trip_appointment').datetimepicker({
    format:'Y-m-d H:i',
    inline:true,
    lang:'ru',
    step: 15
  });

</script>

</div>