<!DOCTYPE html>
<html>
    <head>
      <title>Run</title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
      <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    </head>

    <body <%= "class=#{@bg}" if @bg %>>

      <%= render 'shared/menu_list' %>

      <div class="page-wrap">

          <header class="main-header">
            <%= link_to '', '#', class: 'open-close-menu' %>
            <div id="signUp">
              <% if user_signed_in? %>
                <%= link_to '', destroy_user_session_path, :method => :delete, :data => {:confirm => 'Вы уверены, что хотите завершить сессию?'}, class: 'login-icon' %>
              <% else %>
                <%= link_to '', entry_path, class: 'login-icon' %>
              <% end %>
            </div>
          </header>
            <p class="notice"><%= notice %></p>
            <!--<p class="alert"><%= alert %></p>-->
          <%= yield %>
      </div>

    </body>
</html>

<script>
  $( document ).ready(function() {
    $('.open-close-menu').click(function(e){
      e.preventDefault();
      $('.main-nav').animate({width:'toggle'},350);
    })
  });
</script>
